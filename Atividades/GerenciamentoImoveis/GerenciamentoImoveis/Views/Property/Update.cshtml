@model Modelo.Property

<style>
    body{
        font-family: Arial, sans-serif;
        background-color: #F4A460;
    }
</style>

<h2>Editar Imóvel</h2>

<form asp-action="ConfirmUpdate" method="post">
    <input type="hidden" asp-for="Id" />

    <div>
        <label for="Category">Categoria</label>
        <select asp-for="Category" class="form-control" class="form-control"> <!-- O asp-for seleciona automaticamente a opção dentro do select -->
            <option value="Apartment">Apartment</option>
            <option value="House">House</option>
            <option value="Farm">Farm</option>
            <option value="Commercial Room">Commercial Room</option>
        </select>
    </div>
    <div>
        <label>Valor</label>
        <input asp-for="Value" class="form-control" type="number" step="0.01" />
    </div>
    <div>
        <label>Descrição</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div>
        <label>Proprietário</label>
        <input asp-for="CurrentOwner" class="form-control" />
    </div>
    <div>
        <label>Tipo de Negócio</label>
        <select asp-for="BusinessType" id="BusinessType" name="BusinessType" class="form-control">
            <option>Sale</option>
            <option>Rent</option>
        </select>
    </div>
    <div>
        <label>Endereço</label>
        <input asp-for="Address" class="form-control" />
    </div>
    <div>
        <label>Area (M²)</label>
        <input asp-for="SquareMeter" class="form-control" type="number" step="0.01" />
    </div>
    <div>
        <label>URL da Foto</label>
        <input asp-for="PhotoUrl" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="List" class="btn btn-secondary">Cancelar</a>
</form>