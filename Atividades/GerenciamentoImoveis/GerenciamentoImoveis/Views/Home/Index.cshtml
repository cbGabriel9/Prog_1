@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: Britannic;
        background: url('https://conceito.de/wp-content/uploads/2014/10/building-2378893_1280.jpg') no-repeat center center fixed;
        background-size: cover;
        position: relative;
    }

    .container-pai {
        position: relative;
        z-index: 1;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    #carouselExemplo {
        margin-top: 150px;
    }

    img {
        width: 400px;
        height: 500px;
    }

    .custom-btn-size {
        padding: 20px 60px;
        font-size: 2rem;
        border-radius: 12px;
    }
</style>

<div class="container-pai">

    <div class="text-center" style="margin-top: 50px">
        <h1 class="display-4" style="color: #F4A460; background: white">Seja Bem-vindo!</h1>
        <h3 style="margin-top: 50px; color: white;">Aqui você encontra o melhor gerenciamento de móveis de Santa Catarina!</h3>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a asp-controller="Property" asp-action="Index" class="btn btn-success btn-lg custom-btn-size" style="margin-top: 100px;">
            Vamos lá!
        </a>
    </div>

    <div id="carouselExemplo" class="carousel slide mb-5" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://i.pinimg.com/474x/4c/d4/cd/4cd4cdec6669d4cc9dc9f65ced6eb6e9.jpg" class="d-block w-50 mx-auto rounded-4" alt="Imagem 1">
            </div>
            <div class="carousel-item">
                <img src="https://www.superbairro.com.br/wp-content/uploads/2022/05/PATRIANI-EPIC-PUBLI-13-MAI-22-560x416.jpg" class="d-block w-50 mx-auto rounded-4" alt="Imagem 2">
            </div>
            <div class="carousel-item">
                <img src="https://www.cimentoitambe.com.br/wp-content/uploads/2024/04/OAS2-1.jpg" class="d-block w-50 mx-auto rounded-4" alt="Imagem 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExemplo" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExemplo" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
            <span class="visually-hidden">Próxima</span>
        </button>
    </div>


</div>
