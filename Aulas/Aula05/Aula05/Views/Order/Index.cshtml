@model List<Modelo.Order>;

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Nº de Itens</th>
            <th>Customer</th>
            <th>End. Entrega</th>
            <th>Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Modelo.Order order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderItems!.Count</td>
                <td>@order.Customer!.Name</td>
                <td>@order.OrderDate</td>
                <td>
                    <a asp-action="Delete" asp-controller="Order" asp-route-id="@order.Id" title="Excluir Order">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>