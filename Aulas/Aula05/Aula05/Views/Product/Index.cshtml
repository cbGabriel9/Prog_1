@model List<Modelo.Product>

<a asp-action="Create" asp-controller="Product" class="btn btn-light">Novo Product</a>

@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Modelo.Product product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductName</td>
                    <td>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" title="Excluir Product">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" title="Atualizar Product">
                            <i class="fa fa-pencil" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        Não existem registros de products
    </div>
}

<a asp-action="ExportDelimitatedFile"
   asp-controller="Product" class="btn btn-Light">Exportar Dados</a>