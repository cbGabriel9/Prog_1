    <form method="POST"
        asp-action="Index"
        asp-controller="Teste">

        <h2>Codificacao de César (Cifra de César)</h2>

        <h3>Defina a distância das letras:</h3>
        <input type="number" name="n"/>

        <h3>Digite a palavra:</h3>
        <input type="text" id="texto" name="texto" /><br />

        <p></p>

        <input type="submit" value="Codificar" name="tipo"/>
       
        <p></p>

        <input type="submit" value="Decodificar"/>
