<hr />

<!-- Exibe o texto original -->
<h4>Texto Original:</h4>
<p>@Model.Texto</p>

<!-- Exibe a palavra codificada -->
<h4>Palavra Convertida (@Model.Passo): </h4>
    @if (Model.palavraCodificada != null && Model.palavraCodificada.Any())
        {   
        // Aqui eu converto minha list em string, passando dois argumentos, o separador "" e a list ao lado
        <p><strong>@string.Join("", Model.palavraCodificada)</strong></p>
        }
    else
        {
        <li>Nenhum caractere válido encontrado.</li>
        }

